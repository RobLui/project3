{% extends "@Project3Website/layout.html.twig" %}

{% block title %}

{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text-center">
            <img src="{{ asset('bundles/project3website/images/food-guru-logo-medium.png') }}" alt="logo" class="img-responsive center-block gerechten resize-logo-medium" />
    {% if gerechten|length > 0 %}
            <div class="col-sm-12">
                <div class="col-sm-8 col-sm-offset-2">
                    <h3 class="margin-bottom-1em">
                        GERECHTEN MET {{ ingredienten|default("-")|upper }}
                    </h3>
                    {% for c in categories %}
                        <div class="col-sm-4">
                            <div class="text-center category">
                                <form action="{{ path('project3_gerecht_query',{limit:'10'}) }}">
                                    <input required name="searchinput" type="text" class="hidden" value="{{ c.naam }}+{{ ingredienten|default() }}" >
                                    <button class="btnnn" type="submit">
                                        {{ c.naam }}
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 text-center">
            <div class="col-sm-12">
                {% for gerecht in gerechten %}
                    <div class="col-sm-4 text-center quickfix">

                        <a href="{{ path('project3_gerecht_detail', {id: gerecht.id }) }}">
                            <div class="img-responsive">
                                <img class="col-sm-12" src="{{ gerecht.fotoVierkant|default('-') }}" alt="{{ gerecht.naam|default('-') }}">
                            </div>
                        </a>
                        <div class="col-sm-8 col-sm-offset-2">
                            <p class="bold margin-bottom-6">{{ gerecht.naam|default('-') }}</p>
                        </div>

                        <div class="col-sm-5 col-sm-offset-1">
                            <p><span class="glyphicon glyphicon-time"></span> {{ gerecht.bereidingstijd|default(10) }} min</p>
                        </div>

                        <div class="col-sm-6">
                            {% for i in 0..gerecht.rating|default(4) %}
                                <span class="glyphicon glyphicon-star-empty"></span>
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
    {% else %}
            <div class="col-sm-8 col-sm-offset-2 text-center quickfix">
                <h2>
                    <span>Er werden geen gerechten gevonden met {{ ingredienten }}..</span>
                </h2>

                <form action="{{ path('project3_gerecht_query',{limit:'10'}) }}">
                    <div class="input-group stylish-input-group">
                        <input required name="searchinput" type="text" class="form-control text-center" placeholder="Probeer het eens met andere ingrediÃ«nten?" >
                        <span class="input-group-addon">
                          <button type="submit" class="glyphicon glyphicon-search"></button>
                        </span>
                    </div>
                </form>

            </div>
            {% endif %}
        </div>
    </div>
</div>

        {% endblock %}
