{% extends "@Project3Website/layout.html.twig" %}

{% block title %}

{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 text-center">
            <img src="{{ asset('bundles/project3website/images/food-guru.png') }}" alt="logo" class="img-responsive center-block gerechten" />

            <div class="col-sm-12">
                <div class="col-sm-8 col-sm-offset-2">
                    <h3 class="title">
                        GERECHTEN MET KIP
                    </h3>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="col-sm-3"></div>
                {% for c in categories %}
                    <div class="col-sm-2">
                        <p class="text-center category">{{ c.naam|default() }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center">

            {% for gerecht in gerechten %}
                <div class="col-md-6 text-center quickfix">
                    <a href="{{ path('project3_gerecht_detail', {id: gerecht.id }) }}">
                        <div class="img-responsive">
                            <img class="col-md-12" src="{{ gerecht.foto }}" alt="{{ gerecht.naam }}">
                        </div>
                    </a>

                    <div class="col-md-6 col-md-offset-3">
                        <p>{{ gerecht.naam|default() }}</p>
                    </div>

                    <div class="col-md-5 col-md-offset-1">
                        <p>{{ gerecht.bereidingstijd|default(10) }} min</p>
                    </div>

                    <div class="col-md-6">
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                        <span class="glyphicon glyphicon-star-empty"></span>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}