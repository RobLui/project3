
{% if app.user %}
    <h3>Already logged in!</h3>
{% endif %}

<img src="{{ asset('bundles/project3website/images/food-guru-logo-medium.png') }}" alt="logo" class="img-responsive center-block" />
{% if error %}
        {{ error.messageKey|trans(error.messageData, 'security') }}
{% endif %}

<div class="loginform col-sm-8 col-sm-offset-2">
    <form action="{{ path('project3_security_login') }}" method="POST" role="form" class="{{ class }}">
        <div class="form-group">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Username or e-mail"/>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" id="password" name="_password" placeholder="Password"/>
        </div>
        <button type="submit" class="semibold size-buttons-no-cat instellingen aanpassen-button-login">Inloggen</button>
    </form>
</div>

