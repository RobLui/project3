{% extends "@Project3Website/layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-12">
                <a href="{{ path('project3_website_home') }}">
                    <img src="{{ asset(logo_med_img) }}" alt="{{ logo_med_alt }}"
                         class="img-responsive center-block gerechten resize-logo-medium"/>
                </a>
                <div class="col-sm-8 col-sm-offset-2 text-center">
                    <div class="col-sm-6 col-sm-offset-3">
                        <h1>E-mail toevoegen </h1>
                        {{ form_start(form) }}
                        <div class="col-sm-12 category">
                            {{ form_widget(form.email, { "attr":{ "class":"form-control control","required": "true" } }) }}
                        </div>
                        <div class="col-sm-12 category">
                            <button type="submit" class="semibold instellingen aanpassen-button col-sm-4">
                                <a>OPSLAAN</a>
                            </button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock content %}

{% block footer %}
    <div class="margin-bottom">
        {% include 'Project3WebsiteBundle:Partials:footer.html.twig' %}
    </div>
{% endblock %}
