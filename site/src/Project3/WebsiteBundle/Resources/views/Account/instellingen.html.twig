{% extends "@Project3Website/layout.html.twig" %}

{% block title %}

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <img src="{{ asset('bundles/project3website/images/food-guru-logo-medium.png') }}" alt="logo" class="img-responsive center-block gerechten resize-logo-medium" />

                <div class="col-sm-8 col-sm-offset-2 margin-bottom-1-5em">
                    <h3 class="title">
                        JOUW INSTELLINGEN
                    </h3>
                </div>

                {# E-MAIL #}
                <div class="col-sm-12 text-left container-white padding-2em">
                    <p class="margin-bottom-1em">Gerechten en shoppinglijstjes mogen verstuurd worden naar deze adressen verstuurd worden:</p>
                    <ul class="list-group margin-bottom-0">
                    {% for contact in contacts %}
                        <li class="list-group-item category">
                            {{ contact.email }}
                            <button class="btnnn semibold pull-right instellingen"><a href="{{ path('project3_contact_edit', { 'id': contact.id }) }}" class="size-buttons-no-cat">aanpassen</a></button>
                        </li>
                    {% endfor %}
                    </ul>
                </div>


                <div class="col-sm-12 text-left container-white padding-2em">
                    <p class="margin-bottom-1em">Gerechten en shoppinglijstjes mogen verstuurd worden naar deze adressen verstuurd worden:</p>
                    {% for contact in contacts %}
                    <form action="{{ path('project3_contact_edit', { 'id': contact.id }) }}" method="post">

                      <div class="input-group stylish-input-group">
                          <input required name="searchinput" type="text" class="form-control text-center" value="{{ contact.email }}" >
                              <span class="input-group-addon">
                                  <button type="submit" class="aanpassen-button">aanpassen</button>
                              </span>
                          </span>
                      </div>

                    </form>
                    {% endfor %}
                </div>

            </div>
        </div>
    </div>

{% endblock %}
